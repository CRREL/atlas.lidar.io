  <body>

    <div class="container">

      <h1>ATLAS</h1>

      <div class="status-report">
        <ul class="status-report-list">
          {{#each status}}
          <li class="status-report-{{status.name}}" data-toggle="tooltip" data-placement="bottom" title="{{description}}">
            <span class="glyphicon glyphicon-{{status.glyphicon}}" aria-hidden="true"></span>
            <span class="status-report-name">{{name}}</span>
            <span class="status-report-status">{{status.name}}</span>
          </li>
          {{/each}}
        </ul>
      </div>

      <div class="row">
          {{#with heartbeat}}
        <div class="col-sm-3 col-xs-12">
          <h3>Battery 1</h3>
          {{battery-charge soc1}}

          <h3>Battery 2</h3>
          {{battery-charge soc2}}
        </div>

        <div class="col-xs-12 col-md-4 col-md-offset-1">
          <h2>Last heartbeat</h2>

          <dl>
            <dt>Timestamp</dt>
            <dd>{{start_time}}</dd>

            <dt>Mount temperature</dt>
            <dd>{{degrees-celsius mount_temperature}}</dd>

            <dt>Scanner temperature</dt>
            <dd>{{degrees-celsius last_scanner_on.scanner_temperature}}</dd>

            <dt>Atmospheric pressure</dt>
            <dd>{{millibars pressure}}</dd>

            <dt>Relative humidity</dt>
            <dd>{{percentage humidity}}</dd>
          </dl>
        </div>

        <div class="col-xs-12 col-md-4">
          <h2>Last scan</h2>

          <dl>
            <dt>Start time</dt>
            <dd>{{last_scan.start}}</dd>

            <dt>End time</dt>
            <dd>{{last_scan.end}}</dd>

            <dt>Number of points</dt>
            <dd>{{commas last_scan.detail.num_points}}</dd>
          </dl>
        </div>
        {{/with}}
      </div>

      <h2>Cameras</h2>

      <div class="camera-picker">
        <div class="row">
          <div class="col-xs-12 camera-picker-thumbnails">
            {{#each cameras}}
            <img src="{{camera.latest_image.url}}" alt="{{description}}" class="img-rounded camera-picker-thumbnail" data-name="{{camera.name}}" title="{{description}}">
            {{/each}}
          </div>
        </div>

        <div class="row camera-picker-viewport">
          <div class="col-xs-12 col-sm-8 col-sm-offset-2">
            <div class="camera-picker-images">
              {{#each cameras}}
              <div class="thumbnail camera-picker-image hidden" data-name="{{camera.name}}">
                <a href="{{camera.latest_image.url}}">
                  <img src="{{camera.latest_image.url}}" alt="{{description}}" title="{{description}}">
                </a>
                <div class="caption">{{name}} at {{camera.latest_image.datetime}}</div>
              </div>
              {{/each}}
            </div>
            <div class="camera-picker-gifs">
              {{#each cameras}}
              <div class="thumbnail camera-picker-image hidden" data-name="{{camera.name}}">
                <a href="{{gif.url}}">
                  <img src="{{gif.url}}" alt="{{description}}" title="{{description}}">
                </a>
                <div class="caption">{{name}} over the last {{gif.days}} days.</div>
              </div>
              {{/each}}
            </div>
          </div>
          <div class="col-xs-12 col-sm-1">
            <button class="btn btn-default camera-picker-animate">
              <span class="glyphicon glyphicon-play" aria-hidden="true"></span>
              Animation
            </button>
          </div>
        </div>
      </div>

      <h2>Videos</h2>

      <div class="row">
        <div class="col-xs-12 col-sm-10 col-sm-offset-1">
          <div class="embed-responsive embed-responsive-16by9">
            <iframe class="embed-responsive-item" src="https://player.vimeo.com/video/180222620" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
          </div>
          <p><a href="https://vimeo.com/180222620">ATLAS System Reveal</a> from <a href="https://vimeo.com/user9189471">Adam LeWinter</a> on <a href="https://vimeo.com">Vimeo</a>.</p>
        </div>
      </div>

      <h2>Graphs</h2>

      <h3>Battery state of charge</h3>
      <div class="row">
        <div id="soc-graph" class="col-xs-11">
        </div>
      </div>

      <h3>Temperature</h3>
      <div class="row">
        <div id="temperature-graph" class="col-xs-11">
        </div>
      </div>

      <h2>Built and supported by:</h2>
      <div class="row">
        <div class="col-xs-4 col-xs-offset-4 col-sm-2 col-sm-offset-5 logo">
          <a href="http://www.erdc.usace.army.mil/Locations/CRREL.aspx">
            <img src="/static/rsgis.png" class="img-responsive">
          </a>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-6 col-xs-offset-3 col-sm-4 col-sm-offset-1 logo">
          <a href="http://climatechange.umaine.edu/glaciology/index.html">
            <img src="/static/umaine.png" class="img-responsive">
          </a>
        </div>
        <div class="col-xs-4 col-xs-offset-4 col-sm-2 col-sm-offset-0 logo">
          <a href="http://stearns.dept.ku.edu/">
            <img src="/static/ku.png" class="img-responsive">
          </a>
        </div>
        <div class="col-xs-8 col-xs-offset-2 col-sm-5 col-sm-offset-0 logo">
          <a href="http://www.heisingsimons.org/">
            <img src="/static/heising-simons.png" class="img-responsive">
          </a>
        </div>
      </div>
    </div>

